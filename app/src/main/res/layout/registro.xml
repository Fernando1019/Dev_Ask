<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">
    //Cabecera
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="195dp"
            android:layout_height="225dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/logofull"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_weight="0.63" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:text="Ingresa Tu Nombre"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:background="#ffffff"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tUsuario"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="#000000" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:id="@+id/buttonAceptar"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bk_boton_plano"
            android:textSize="20dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/buttonCancelar"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="70dp"
            android:background="@drawable/bk_boton_red"
            android:layout_marginRight="20dp"
            android:textSize="20dp" />
    </FrameLayout>

    //fin de cabecera
</LinearLayout>