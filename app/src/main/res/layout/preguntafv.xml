<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    //Cabecera
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="FALSA O VERDADERA"
            android:textSize="20dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pausa"
            android:textColor="#ffffff"
            android:id="@+id/btPausaVf"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Stop"
            android:id="@+id/btStopVf"
            style="@style/Widget.AppCompat.Button.Borderless"
          />
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#fbfbfb">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#7C4DFF"
            android:elevation="4dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/txtCronoFV"
                android:layout_weight="0.05"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="161dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="26dp"
                android:layout_height="55dp"></LinearLayout>

            <TextView
                android:layout_width="111dp"
                android:layout_height="132dp"
                android:text="PREGUNTA #"
                android:id="@+id/tvPreguntaFv"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#000000"
                android:textSize="16dp"
                android:background="#ffffff"
                android:padding="10dp"
                android:elevation="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.86" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="42dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="116dp">
i
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="verdadero"
                android:id="@+id/buttonV"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/bk_boton_plano"
                android:textSize="20dp"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="47dp"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Falso"
                android:id="@+id/buttonF"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/boton_normal_rojo"
                android:textSize="20dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="New Text"
                    android:id="@+id/txCantidadFv"
                    android:layout_weight="0.09"
                    android:textSize="20dp"
                    android:textColor="@color/abc_input_method_navigation_guard" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Correctas"
                    android:id="@+id/textView10"
                    android:layout_weight="0.15"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="New Text"
                    android:id="@+id/txCorrectasFv"
                    android:textColor="@color/abc_input_method_navigation_guard" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>