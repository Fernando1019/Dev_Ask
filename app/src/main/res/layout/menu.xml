<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">
    //Cabecera
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DevAsk "
        android:textSize="@dimen/abc_action_button_min_width_overflow_material" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@drawable/incio"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="104dp"
            android:layout_height="86dp"
            android:id="@+id/buttonAyuda"
            android:layout_gravity="left|bottom"
            android:background="@mipmap/ic_action_help"
            android:text="Ayuda"
            android:textColor="#000000"
            android:gravity="bottom|center_horizontal" />

        <Button
            android:layout_width="104dp"
            android:layout_height="86dp"
            android:id="@+id/buttonPuntos"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/ic_editor_insert_chart"
            android:text="Ranking"
            android:textColor="#000000"
            android:gravity="bottom|center_horizontal" />

        <Button
            android:layout_width="104dp"
            android:layout_height="86dp"
            android:id="@+id/buttonJugar"
            android:layout_gravity="center"
            android:background="@mipmap/ic_av_play_circle_fill"
            android:text="Jugar"
            android:textColor="#000000"
            android:gravity="bottom|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bienvenido "
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#000000"
            android:layout_marginRight="70dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/emptyString"
            android:id="@+id/usuario"
            android:layout_gravity="right|top"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp" />
    </FrameLayout>

    //fin de cabecera
</LinearLayout>